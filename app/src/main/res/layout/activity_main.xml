<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fbf8dc"
    tools:context="com.jeknowledge.hojehapraxe.app.MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:id="@+id/imageView2"
        android:layout_centerHorizontal="true"
        android:src="@drawable/praxeappbg"
        android:scaleType="centerCrop" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/big_answer_textview"
        android:text="@string/big_answer_default"
        android:width="250dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/reason_textview"
        android:layout_alignStart="@+id/reason_textview"
        android:layout_marginTop="20dp"
        android:textColor="@color/myBlack" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/reason_default"
        android:id="@+id/reason_textview"
        android:layout_marginTop="26dp"
        android:width="250dp"
        android:layout_below="@+id/big_answer_textview"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="25dp"
        android:textColor="@color/myBlack" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/notification_default"
        android:id="@+id/notification_textview"
        android:width="180dp"
        android:layout_below="@+id/reason_textview"
        android:layout_alignLeft="@+id/reason_textview"
        android:layout_alignStart="@+id/reason_textview"
        android:layout_marginTop="42dp"
        android:textColor="@color/myBlack" />

</RelativeLayout>
