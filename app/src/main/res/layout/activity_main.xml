<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/praxeappbg"
    tools:context="com.jeknowledge.hojehapraxe.app.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/big_answer_textview"
        android:text="Hoje pode haver praxe em Coimbra"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:width="250dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Faleceu um professor de Direito."
        android:id="@+id/reason_textview"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/big_answer_textview"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:width="250dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Notificação oficial oriunda do Concelho de Veteranos."
        android:id="@+id/notification_textview"
        android:layout_marginTop="41dp"
        android:layout_below="@+id/reason_textview"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:width="180dp"
        android:textColor="@android:color/secondary_text_light" />

</RelativeLayout>
